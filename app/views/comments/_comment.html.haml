= div_for comment do
	-if logged_in?
		= link_to 'Eliminar', post_comment_path(@post,comment), :method => :delete, :class => "delete", :remote => true, :confirm => "N'estas segur?"
	.gravatar_comentaris
		= raw gravatar(comment.email, :size => 60, :default => 'mm')
	%b 
		= comment.name
	= "fa #{time_ago_in_words(comment.created_at)} ha escrit:"
	%p
		= content_tag(:p, comment.body, :class => "comment-body")
  
 