<%= title t(".title") %>
<%= meta_keywords t(".metakeywords") %>
<%= meta_description t(".metadescription") %>

<div id="news">
  <h1><%=t(".subtitle") %></h1>
  
  <div class="block1">
    <h2>Colectivo de Hosteleria</h2>
    <div class="image">
      <img src="/images/imagen1.png" />
    </div>
    <div class="news_content_image">
      <p><%=t(".noticia1") %></p>
    </div>
    <div class="clear"></div>
    <div class="date"><p> Fecha: 11 / 04 / 2011</p></div>
  </div>
  
  <div class="block1">
    <h2>Borrador de la declaracion anual</h2>
    <div class="news_content">
      <p><%=t(".noticia2") %></p>
    </div>
    <div class="clear"></div>
    <div class="date"><p>  Fecha: 11 / 04 / 2011</p></div>
  </div>
  

  <%= @posts.each do |post| %>
    <div class="block1">
      <h2><%= post.title %></h2>
      <div class="news_content">
        <%= simple_format post.body %>
      </div>
      <div class="clear"></div>
      <div class="date"><p> Fecha: <%= l post.created_at.to_date %></p></div>
    </div>
  <% end %>

</div>

